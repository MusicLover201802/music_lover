    <%= render "layouts/admin/header" %>

<div class="contener">
    <div class="row">
        <div class="col-xs-3" style="text-align: right;">
            <h2><strong>購入詳細</strong></h2>
        </div>
        <div class="col-xs-6">
            <%= link_to "内容編集", edit_admin_order_path, class: "btn btn-primary btn-default btn-margin-top" %>
        </div>
    </div>
</div>

<!-- パクリ -->
<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="whole col-xs-12 ">
				<tr>
					<th>購入者</th><td><%= @order.last_name_kana %> <%= @order.first_name_kana%>  様</td>
				</tr>
				<tr>
					<th>購入日時</th><td><%= @order.created_at.to_s(:created_at) %></td>
				</tr>
				<tr>
					<th>注文状況</th><td><%= @order.status %></td>
				</tr>
				<tr>
					<th>購入金額合計</th><td></td>
				</tr>
				<tr>
					<th>お支払い方法</th><td><%= @order.payment %></td>
				</tr>
				<tr>
					<th>購入内容</th><td>
					<table class="items-table">
						<tr>
							<th>商品名</th><td>    </td>
						</tr>
						<tr>
							<th>アーティスト名</th><td>   </td>
						</tr>
						<tr>
							<th>単価</th><td>   </td>
						</tr>
						<tr>
							<th>数量</th><td>   </td>
						</tr>
						<tr>
							<th>小計</th><td>    </td>
						</tr>
					</table></td>
				</tr>
				<tr>
					<th>商品送付先</th>
					<td>
					<%= @order.postal_code %><br>
					<%= @order.prefecture %><%= @order.city %><br>
					<%= @order.building %><br>
					<%= @order.phone_number %>
					</td>
				<tr>
			</table>
			<%= link_to '戻る', :back , class: 'btn btn-default' %>
		</div>
	</div>
</div>