<div class="top-blank">
    <%= render "layouts/admin/header" %>
</div>
<div class="row btn-margin-top" >
    <div class="col-xs-9">
    </div>
    <%= render 'layouts/admin/top' %>
</div>
            <%= link_to "Back", :back, class: "btn btn-primary btn-xs" %>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3" style="text-align: right;">
            <h2><strong>商品一覧</strong></h2>
        </div>
    </div>
</div>
<div class="contener">
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
                    <div class="col-xs-6" style="text-align: center">
            <p>商品検索</p>
            <%= form_tag(admin_items_path) do %>
              <p>
                <%= text_field_tag :search %>
                <%= submit_tag "Search", :name => nil %>
              </p>
            <% end %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
        <table id="foo-table" class="table table-bordered">
            <thead>
               <tr>
            　　 <th>ジャケット</th>
            　　 <th>CD名</th>
            　　 <th>アーティスト名</th>
            　　 <th>ジャンル</th>
            　　 <th>レーベル</th>
            　　 <th>価格</th>
            　　 <th>在庫</th>
            　　 <th>発売日</th>
               </tr>
            </thead>
            <% @items.each do |item| %>
            <tbody>
               <tr>
                <td><span><%#= item.jacket_image_id %></span></td>
                <td><span><%= item.item_name %></span></td>
                <td><span><%= item.artist_name %></span></td>
                <td><span><%= item.genre_id %></span></td>
                <td><span><%= item.label_name %></span></td>
                <td><span><%= item.price %>円</span></td>
                <td><span><%= item.stock %>枚</span></td>
                <td><span><%= item.release_date %></span></td>
            <% end %>
               </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="text-center">
    <%#= paginate @items %>
</div>