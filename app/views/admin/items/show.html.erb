<%= render 'layouts/admin/header' %>


<div class="contener">
	<div class="row btn-margin-top">
		<div class="col-xs-3" style="text-align: center;">
			<%= link_to "Back", :back, class: "btn btn-primary btn-xs" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3" style="text-align: right;">
			<h2><strong>商品詳細</strong></h2>
			<div class="col-xs-12" style="text-align: center;">

			</div>
		</div>
		<div class="col-xs-offset-5 col-xs-6" style="text-align: right">
					<span>
						<%= link_to '編集', edit_admin_item_path(@item), class: "btn btn-primary" %>
					</span>
					<span>
						<%= link_to '削除', admin_item_path(@item), method: :delete, class: "btn btn-danger" %>
					</span>
				</div>
	</div>
</div>

<!-- main -->
		<div class="col-xs-12">

			<div class="col-xs-4" style="text-align: center">
				<%= attachment_image_tag @item, :jacket_image, format: 'png', class: "center-block", fallback: "/no_image_m.png", width: '200', height: '200'%>
			</div>

			<div class="col-xs-3" style="text-align: left">
				<ul class="item_detail" style="list-style: none">
					<li style="font-size: 20px"><strong>商品名</strong></li>
					  <li class="indent" style="padding-bottom: 20px"><%= @item.item_name %></li>
					<li style="font-size: 20px"><strong>アーティスト</strong></li>
					  <li class="indent" style="padding-bottom: 20px"><%= @item.artist_name %></li>
					<li style="font-size: 20px"><strong>レーベル</strong></li>
					  <li class="indent" style="padding-bottom: 20px"><%= @item.label_name %></li>
					<li style="font-size: 20px"><strong>価格</strong></li>
					  <li class="indent" style="padding-bottom: 20px">￥<%= @item.price.to_s(:delimited) %></li>
					<li style="font-size: 20px"><strong>ジャンル</strong></li>
					  <li class="indent"><%= @item.genre.genre_name %></li>
					 <li style="font-size: 20px"><strong>在庫</strong></li>
					  <li class="indent"><%= @item.stock %></li>
				</ul>
			</div>
				<div class="col-xs-4">
					<div class="row">
					<div class="track-box" style="margin-bottom: 20px">
						<div style="font-size: 20px"><strong>収録曲</strong></div>
						  <% @item.discs.each do |id| %>
						<ul style="list-style: none">
							<li style="padding-bottom: 10px"><br><strong><%= id.disc_name %></strong></li>
						  	  <% id.tracks.each do |it| %>
							<li class="indent" style="font-size: 12px"><strong><%= it.track_num %>. </strong><%= it.track_name %></li>
							  <% end %>
						  <% end %>
						</ul>
					</div>
				</div>
				</div>
