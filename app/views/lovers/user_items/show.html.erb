<%= render 'layouts/header'%><!-- header -->

<h1 style="text-align: center">*カート内容表示画面*</h1>  <!-- 完成したらこの行は削除する -->

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1>ショッピングカート</h1>
			<table class="table table-stripped">
				<thead>
					<tr>
						<th>商品画像</th>
						<th>商品名/アーティスト名</th>
						<th>単価</th>
						<th>数量</th>
						<th>小計</th>
						<th>   </th>
					</tr>
				</thead>
				<tbody>
					<% @user_items.each do |user_item| %>
					<tr>
						<td> <!-- attachment_image_tag予定地 --></td>
						<td><%= user_item.item.item_name %> / <%= user_item.item.artist_name %></td>
						<td><%= user_item.item.price %></td>   <!-- 余裕があれば、金額形式で表記する -->
						<td><%= user_item.quantity%></td> <!-- 数量を変更できるようにプルダウンボタン実装する -->
						<td><%= user_item.item.price * user_item.quantity %>  </td>
						<td> </td>
						<td> </td>
						<td> </td>
					</tr>
				</tbody>
				<thoot>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td>購入金額合計：</td>
						<td><%= user_item.item.price %> <!-- カート内合計金額を導き出す　やりかた不明 --></td>
					</tr>
				</thoot>
			</table>
			<% end %>
			<%= link_to "買い物を続ける", lovers_root_path, class: "btn btn-primary" %>
			<%= link_to "レジへ進む", lovers_orders_new_path, class: "btn btn-info" %>
		</div>
	</div>
</div>
<%= render 'layouts/footer'%>

