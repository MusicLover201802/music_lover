<h1>*カート内容表示画面*</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h1>ショッピングカート</h1>
			<table class="table table-stripped">
				<thead>
					<tr>
						<th>商品画像</th>
						<th>商品名/アーティスト名</th>
						<th>単価</th>
						<th>数量</th>
						<th>小計</th>
						<th>   </th>
					</tr>
				</thead>
				<tbody>
					<% @user_items.each do |user_item| %>
					<tr>
						<td><%= attachment_image_tag user_item, :profile_image, :fill, 45, 45, fallback: "no_image.jpg" %></td>
						<td><%= user_item.item.item_name %> / <%= user_item.item.artist_name %></td>
						<td><%= user_item.item.price %></td>   <!-- 単価x数量で計算させる。余裕があれば、金額形式で表記する -->
						<td><%= user_item.quantity%></td>
						<td>< 小計  ></td>
						<td><%= %></td>
						<td><%= %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<p> 小計 </p>   <!-- 余裕があれば、金額形式で表記する -->
			<button class=""> レジへ進む </button>
			<button class=""> 買い物を続ける </button>
		</div>
	</div>
</div>

