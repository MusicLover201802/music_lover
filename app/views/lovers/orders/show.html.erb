<%= render 'layouts/header'%>
<div class="row">
	<div class="col-xs-3" style="text-align: right">
		<h2 style="margin-top: 40px"><strong>購入履歴詳細</strong></h2>
	</div>
</div>
<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<table class="table">
			<thread>
				<tr>ご注文日時</tr>
			</thread>
			<tbody>
				<tr><th class="indent"><%= @orders.created_at.strftime('%Y年%m月%d日 %H:%M') %></th></tr>
			</tbody>
		</table>

		<table class="table">
			<thread>
				<tr>お支払い方法</tr>
			</thread>
			<tbody>
				<tr><th class="indent"><%= @orders.payment %></th></tr>
			</tbody>
		</table>

		<table class="table">
			<thread>
				<tr>ご注文合計金額</tr>
			</thread>
			<tbody>
				<tr><th class="indent"><%= @orders.created_at.to_s(:created_at) %></th></tr>
			</tbody>
		</table>

		<table class="table">
			<thread>
				<tr>発送状況</tr>
			</thread>
			<tbody>
				<tr><th class="indent"><%= @orders.status %></th></tr>
			</tbody>
		</table>


		<table class="table">
			<thread>
				<tr>ご購入内容</tr>
			</thread>
			<tbody>
				<td>
					<% @orders.order_items.each do |i| %>
					<div class="panel panel-warning">
						<div class="panel-heading clearfix">
						</div>
						<div class="panel-body" style="padding: 15px 15px 0 15px">
							<table class="table">
								<tbody>
									<% sum = 0 %>
									<div class="row">
										<tr class="col-xs-10">
											<tr> <th>商品名 </th> <td><%= i.item.item_name %></td> </tr>
											<tr> <th>アーティスト名 </th> <td><%= i.item.artist_name %></td> </tr>
											<tr> <th>単価 </th> <td>￥<%= i.price.to_s(:delimited) %></td> </tr>
											<tr> <th>数量 </th> <td><%= i.quantity %></td> </tr>
											<tr> <th>小計</th> <td><% sub_total = i.price * i.quantity %> ¥<%= sub_total.to_s(:delimited) %> </td> </tr>
										</tr>
									</div>
								</tbody>
							</table>
						</div>
					</div>
					<% end %>
				</td>
			</tbody>
		</table>

		<table class="table">
			<thread>
				<tr>発送先</tr>
			</thread>
			<tbody>
				<tr>
					<th><%= @orders.last_name %>  <%= @orders.first_name %> 様<br/>
					〒<%= @orders.postal_code %>  <%= @orders.prefecture %><%= @orders.city %><%= @orders.building %><br/>
					<%= @orders.phone_number %></th>
				</tr>
			</tbody>
		</table>
    	<%= link_to '購入履歴一覧に戻る', lovers_user_path(current_user),  class: 'btn btn-default' %>
	</div>
</div>

<%= render 'layouts/footer'%>









